{
    "createPage": {
        "schema": {
            "method": "POST",
            "host": "api.notion.com",
            "path": "/v1/pages",
            "headers": {
                "Authorization": "Bearer <%=access_token%>",
                "Content-Type": "application/json",
                "Notion-version": "2022-06-28"
            }
        },
        "options":{
            "oauth": "notion"
        }
    },
    "appendToExistingPage": {
        "schema": {
            "method": "PATCH",
            "host": "api.notion.com",
            "path": "/v1/blocks/<%=context.page_id%>/children",
            "headers": {
                "Authorization": "Bearer <%=access_token%>",
                "Content-Type": "application/json",
                "Notion-version": "2022-06-28"
            }
        },
        "options": {
            "oauth": "notion"
        }
    },
    "getPageBlocks": {
        "schema": {
            "method": "GET",
            "host": "api.notion.com",
            "path": "/v1/blocks/<%=context.page_id%>/children",
            "headers": {
                "Authorization": "Bearer <%=access_token%>",
                "Content-Type": "application/json",
                "Notion-version": "2022-06-28"
            }
        },
        "options": {
            "oauth": "notion"
        }
    },
    "getBlock": {
        "schema": {
            "method": "GET",
            "host": "api.notion.com",
            "path": "/v1/blocks/<%=context.block_id%>",
            "headers": {
                "Authorization": "Bearer <%=access_token%>",
                "Content-Type": "application/json",
                "Notion-version": "2022-06-28"
            }
        },
        "options": {
            "oauth": "notion"
        }
    },
    "deleteBlock": {
        "schema": {
            "method": "DELETE",
            "host": "api.notion.com",
            "path": "/v1/blocks/<%=context.block_id%>",
            "headers": {
                "Authorization": "Bearer <%=access_token%>",
                "Content-Type": "application/json",
                "Notion-version": "2022-06-28"
            }
        },
        "options": {
            "oauth": "notion"
        }
    },
    "updateBlock": {
        "schema": {
            "method": "PATCH",
            "host": "api.notion.com",
            "path": "/v1/blocks/<%=context.block_id%>",
            "headers": {
                "Authorization": "Bearer <%=access_token%>",
                "Content-Type": "application/json",
                "Notion-version": "2022-06-28"
            }
        },
        "options": {
            "oauth": "notion"
        }
    }
}